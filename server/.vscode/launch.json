  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Docker",
      "port": 9229,
      "address": "0.0.0.0", // Change this if your Docker is not running locally
      "localRoot": "${workspaceFolder}", // Adjust this based on your project structure
      "remoteRoot": "/app", // This should match the working directory in your Docker container
      "skipFiles": ["<node_internals>/**"],
      "restart": true,
      "sourceMaps": true,
      "smartStep": true
    }
  ]
}
